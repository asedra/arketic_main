{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    // General rules
    "no-console": "warn",
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-template": "error"
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  }
}
